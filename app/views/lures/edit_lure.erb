<form method="POST" action="/tackle-boxes/<%=@tackle_box.id%>/lures/<%=@lure.id%>/edit">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  Name:<input type="text" name="name" value="<%=@lure.name%>">
  Manufacturer:<input type="text" name="manufacturer" value="<%=@lure.manufacturer%>"><br>
  <h4>Select Tackle Box</h4>
  <%current_angler.tackle_boxes.each do |tackle_box|%>
    <input type="radio" name="tid" id="<%=tackle_box.id%>" value="<%=tackle_box.id%>" <%='checked' if @lure.tackle_box.id ==tackle_box.id %>><%=tackle_box.name%>
  <%end%><br><br>
  <input type="submit" value="submit">
</form>
